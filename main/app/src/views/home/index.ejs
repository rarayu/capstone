    </div>
    <section class="bg-white py-8">
      <div class="container max-w-5xl mx-auto m-8">
        <h2
          class="w-full my-2 text-4xl font-bold leading-tight text-center text-gray-800"
        >
          점검항목
        </h2>
        <div class="w-full mb-4">
          <div
            class="h-1 mx-auto mb-10 gradient w-64 opacity-25 my-0 py-0 rounded-t"
          ></div>
        </div>
        <div class="flex flex-wrap">
          <% let count=0; %> <% for (let key in scripts) { %> <% if (count < 10)
          { %>
          <div class="w-1/2 px-6 py-3">
            <div class="align-middle">
              <h3 class="text-2xl text-gray-800 font-bold leading-none mt-6">
                <%= scripts[key].name %>
              </h3>
              <p class="text-gray-600 my-3"><%= scripts[key].info %></p>
            </div>
          </div>
          <% } else { %> <% break; %> <% } %> <% count++; %> <% } %>

          <div class="w-full flex justify-center items-center p-6 mt-6">
            <button
              type="button"
              onclick="location.href='/list'"
              class="mx-auto text-center lg:mx-0 bg-green-700 text-white font-bold rounded-full my-3 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out"
            >
              점검항목 더보기
            </button>
          </div>
        </div>
      </div>
    </section>

